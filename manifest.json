{
    "manifest_version": 2,
    "name": "Moegirl Extension",
    "version": "0.0.1",
    "description": "Browser extension of Moegirlpedia",
    "author": "Helloworld",
    "permissions": [
        "storage",
        "*://zh.moegirl.org.cn/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://zh.moegirl.org.cn/*"
            ],
            "js": [
                "core/index.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "options/index.html"
    },
    "options_ui": {
        "page": "options/index.html",
        "chrome_style": false
    }
}